	; .nolist
; Definitions for the 8051 processor

	.param codewidth = 16
        .param pcwidth = 8

	.pushmem rom
	.defmem bottom = 0x0
	.defmem top = 0xffff
	.defmem width = 8
	.defmem executable = 1
	.defmem writeable = 0
	.defmem readable = 1
	.defmem init = 1
	.defmem label = ''
	.defmem pcwidth = 4
        .defmem pcinc = 1
	.popmem
	
	.macro .rom
	.pushmem rom
	.endm
	
	.macro .code
	.pushmem rom
	.endm

