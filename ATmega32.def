;	.nolist
; Definitions for the ATMEGA328 processor

        .param pcwidth = 6

	.pushmem flash
	.defmem bottom = 0
	.defmem top = 0x3fff ; 32k bytes addressed as 16k words
	.defmem width = 16
	.defmem executable = 1
	.defmem writeable = 0
	.defmem readable = 0
	.defmem init = 1
	.defmem label = 'C'
	.defmem pcwidth = 6

	.pushmem ram
	.defmem bottom = 0x100
	.defmem top = 0x8ff
	.defmem width = 8
	.defmem executable = 0
	.defmem writeable = 1
	.defmem readable = 1
	.defmem init = 0
	.defmem label = 'R'
	.defmem pcwidth = 4
	.popmem
	
	.pushmem eeprom
	.defmem bottom = 0
	.defmem top = 0x3ff
	.defmem width = 8
	.defmem executable = 0
	.defmem writeable = 0
	.defmem readable = 0
	.defmem init = 0
	.defmem label = 'E'
	.defmem pcwidth = 3
	.popmem
	
	.macro .flash
	.pushmem flash
	.endm

	.macro .cseg
	.pushmem flash
	.endm

	.macro .ram
	.pushmem ram
	.endm
	
	.macro .dseg
	.pushmem ram
	.endm

	.macro .eeprom
	.pushmem eeprom
	.endm

	.macro .eseg
	.pushmem eeprom
	.endm

; instruction definitions
        .include avr.def
